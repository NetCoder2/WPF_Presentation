<Window x:Class="TestProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:core="clr-namespace:Core;assembly=Core"
        xmlns:Behaviors="clr-namespace:Helpers.Behaviours;assembly=Helpers"
         MinWidth="{Binding WindowMinimumWidth}"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True"
        
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Window.Style>
        <StaticResource ResourceKey="StartupWindow"/>
    </Window.Style>


    <WindowChrome.WindowChrome>
        <WindowChrome
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CaptionHeight="{Binding TitleHeight}"
            CornerRadius="0"
            GlassFrameThickness="0"
            />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="{x:Type Label}" x:Key="ButtonLabel">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>



        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button  Style="{DynamicResource RoundedButton}"
            Command="{Binding OpenCalculatorCommand}"
                Background="{StaticResource WordOrangeBrush}"
                BorderBrush="{StaticResource WordRedBrush}"
            Foreground="Yellow"
            Padding="1"
             Width="300" Height="200">
            <Image Source="/UI;component/Images/Buttons/calculator.png">
            </Image>
        </Button>
            <Label Style="{StaticResource ButtonLabel}"
                Content="Calculator" HorizontalAlignment="Center" 
                   Foreground="{StaticResource WordOrangeBrush}"></Label>
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button  Style="{DynamicResource RoundedButton}"
            Command="{Binding CurrencyConverterCommand}"
                Background="{StaticResource WordLightGreenBrush}"
                BorderBrush="{StaticResource WordGreenBrush}"
            Foreground="Yellow"
            HorizontalAlignment="Center" 
            Padding="1"
            VerticalAlignment="Center" Width="300" Height="200">
            <Image Source="/UI;component/Images/Buttons/36658.png">
            </Image>
        </Button>
            <Label Style="{StaticResource ButtonLabel}"
                Content="Currency Converter" HorizontalAlignment="Center" 
                   Foreground="{StaticResource WordGreenBrush}"></Label>
        </StackPanel>
        
    </Grid>
</Window>